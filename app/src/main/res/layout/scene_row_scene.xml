<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/scene_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/button_on"/>

    <TextView
        android:id="@+id/scene_name"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Scene_name"
        android:text="Scene name"/>

    <TextView
        android:id="@+id/switch_lastSeen"
        android:layout_below="@id/scene_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Switch_lastSeen"
        android:text="@string/last_seen"/>

</RelativeLayout>