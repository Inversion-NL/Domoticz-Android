<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/IDX_title"
                android:text="IDX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"/>

            <TextView
                android:id="@+id/LastUpdate_title"
                android:text="Last update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"/>

            <TextView
                android:id="@+id/SignalLevel_title"
                android:text="Signal level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"/>

            <TextView
                android:id="@+id/BatteryLevel_title"
                android:text="Battery level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/IDX_name"
                android:text="33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"/>

            <TextView
                android:id="@+id/LastUpdate_name"
                android:text="2015-05-01 01:01:01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"/>

            <TextView
                android:id="@+id/SignalLevel_name"
                android:text="2015-05-01 01:01:01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"/>

            <TextView
                android:id="@+id/BatteryLevel_name"
                android:text="2015-05-01 01:01:01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/favorite_title"
            android:text="Favorite"
            android:layout_width="125dp"
            android:layout_height="wrap_content"/>

        <Switch
            android:id="@+id/favorite_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>