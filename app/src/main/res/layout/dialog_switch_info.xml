<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/IDX_title"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:padding="2dp"
                android:text="@string/idx" />

            <TextView
                android:id="@+id/LastUpdate_title"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:padding="2dp"
                android:text="@string/last_update" />

            <TextView
                android:id="@+id/SignalLevel_title"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:padding="2dp"
                android:text="@string/signal_level" />

            <TextView
                android:id="@+id/BatteryLevel_title"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:padding="2dp"
                android:text="@string/battery_level" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/IDX_value"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:paddingBottom="2dp"
                android:paddingLeft="16dp"
                android:paddingRight="2dp"
                android:paddingTop="2dp"
                android:text="@string/idx_valuePlaceholder" />

            <TextView
                android:id="@+id/LastUpdate_value"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:paddingBottom="2dp"
                android:paddingLeft="16dp"
                android:paddingRight="2dp"
                android:paddingTop="2dp"
                android:text="@string/placeholder_lastUpdate" />

            <SeekBar
                android:id="@+id/SignalLevel_indicator"
                android:layout_width="160dp"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/BatteryLevel_value"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:paddingBottom="2dp"
                android:paddingLeft="16dp"
                android:paddingRight="2dp"
                android:paddingTop="2dp"
                android:text="@string/placeholder_value"
                android:visibility="visible" />

            <SeekBar
                android:id="@+id/BatteryLevel_indicator"
                android:layout_width="160dp"
                android:layout_height="32dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/favorite_title"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="@string/favorite" />

        <Switch
            android:id="@+id/favorite_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>